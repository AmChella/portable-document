{
  "name": "Xml-TeX-transformer",
  "version": "1.0.0",
  "description": "A powerful and flexible Node.js-based engine that transforms XML files into text-based formats like HTML or TeX using a declarative, template-driven approach.",
  "main": "src/engine.js",
  "bin": {
    "transform-xml": "src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "test": "node src/test-tex-engine.js",
    "test:cli": "node src/cli.js --run-test",
    "demo": "node src/cli.js template/example.xml template/main.tex.xml output.tex",
    "tex:pdf": "node src/tex-to-pdf.js"
  },
  "keywords": [
    "xml",
    "transformation",
    "tex",
    "latex",
    "template"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "nanoid": "^3.0.0",
  "pdfjs-dist": "^3.11.174",
    "peggy": "^1.2.0",
    "xmldom": "^0.6.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}